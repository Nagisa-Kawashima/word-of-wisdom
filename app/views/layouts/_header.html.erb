<header class="sticky-sm-top">
  <nav class="navbar navbar-expand-lg navbar-dark py-2" style="background-color: #000000;">
    <div class="container">
      <button id="open" class="sp-menu navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="pc-menu collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <!--会員ページにてログインした場合-->
          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light float' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>

        <!--ログインしていない場合-->
        <% else %>
          <li>
            <%= link_to confirm_path, class: 'nav-link text-light float' do %>
              <i class="fas fa-question-circle"></i> FAQ
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: 'nav-link text-light float' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: 'nav-link text-light float' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
            </ul>
          </div>
          </nav>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>