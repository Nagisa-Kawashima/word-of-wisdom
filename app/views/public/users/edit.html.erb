<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h5 class="text-center col-md-5 top1 mx-auto my-4"><i class="fas fa-pencil-alt"></i>ユーザー情報編集</h5>
      <div class="border p-5 shadow background">
         <%= form_with model: @user, url: user_path do |f|%>
        <div class="post_form text-center mt-5">
          <h5 class="col-md-5 col-sm-8 mb-3 mx-auto"><i class="fas fa-user-circle"></i> <%= f.label :profile_image,"アイコン画像の設定" %></h5>
          <p>※拡張子/jpg、jpeg、png、gifのみ</p>
          <%= f.file_field :profile_image,accept: 'image/jpg,image/jpeg,image/png,image/gif', class: 'form-control'%><br>
          <h5 class="col-md-3 col-sm-6 mb-3 mx-auto"><i class="fas fa-file-signature"></i> <%= f.label :name,"名前" %></h5>
            <%= f.text_field :name, class: 'form-control'%><br>
          <h5 class="col-md-4 com-sm-7 mb-3 mx-auto">  <i class="far fa-envelope"></i> <%= f.label :email,"メールアドレス" %></h5>
            <%= f.text_field :email, placeholder: "メールアドレスを入力" , class: 'form-control'%><br>
          <h5 class="col-md-2  col-sm-4 mb-3 mx-auto">  <i class="far fa-envelope"></i> <%= f.label :country_code,"国名" %></h5>
            <%= f.country_select :country_code, {include_blank: "選択して下さい"}, class: 'form-control'%><br>
        </div>
        <div class="d-flex justify-content-around mt-3">
          <div><%= f.submit '変更する', class: "btn btn-success  btn-lg  px-3" %></div>
          <div><%= link_to '退会する', user_unsubscribe_path, class: 'btn btn-secondary btn-lg' %></div>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
