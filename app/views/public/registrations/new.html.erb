<div class="container">
  <div class="row">
    <div>
      <h2>新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ニックネーム（20文字以内）, class: "form-label" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", maxlength: 20, placeholder: "ニックネームを入力" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", pattern: '/\A[\w+\-.]+@[a-z\d\-.]+\.[a-z]+\z/i' , placeholder: "メールアドレスを入力"%>
        </div>
        <div class="field">
          <%= f.label :国籍 %><br />
          <%= f.country_select :country_code, {include_blank: "選択して下さい"} %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以内)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", pattern: '/\A(?=.*?[a-z])(?=.*?\d)[a-z\d]{6,}+\z/i' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit t("helpers.submit.create") %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>

    </div>
  </div>
</div>


